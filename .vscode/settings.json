{
  "stylelint.enable": true,
  "css.validate": false,
  "postcss.validate": false,
  "scss.validate": false,
  "files.associations": {
    "*.module.css": "postcss",
    "*.css": "postcss",
    ".stylelintrc": "json",
    "yarn.lock": "yaml",
  },
  "stylelint.autoFixOnSave": true,
  "editor.formatOnSave": true,
  "[markdown]": {
    "editor.rulers": [100],
    "editor.wordWrapColumn": 100,
    "editor.wordWrap": "wordWrapColumn",
	}
}
